{
  "name": "trek-jwt",
  "version": "0.3.0",
  "description": "JSON Web Tokens Middleware for Trek.js",
  "repository": "trekjs/jwt",
  "author": {
    "name": "Fangdun Cai",
    "email": "cfddream@gmail.com",
    "url": "fundon.me"
  },
  "license": "MIT",
  "keywords": [
    "auth",
    "authentication",
    "authn",
    "authorization",
    "authz",
    "http",
    "jsonwebtoken",
    "jwt",
    "middleware",
    "oauth",
    "token",
    "trek"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=7.6"
  },
  "scripts": {
    "lint": "xo",
    "precommit": "lint-staged",
    "test": "xo && nyc ava"
  },
  "dependencies": {
    "jsonwebtoken": "8.1.0"
  },
  "devDependencies": {
    "ava": "0.23.0",
    "eslint-config-prettier": "2.6.0",
    "husky": "0.14.3",
    "lint-staged": "4.3.0",
    "nyc": "11.2.1",
    "prettier": "1.7.4",
    "request": "2.83.0",
    "request-promise": "4.2.2",
    "trek-engine": "1.0.5",
    "xo": "0.18.2"
  },
  "ava": {
    "concurrency": 5,
    "failFast": true,
    "files": [
      "test/**/*.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "xo",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "nyc": {
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "xo": {
    "extends": "prettier"
  }
}
