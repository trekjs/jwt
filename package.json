{
  "name": "trek-jwt",
  "version": "0.0.3",
  "description": "JSON Web Tokens Middleware for Trek.js",
  "repository": "trekjs/jwt",
  "author": {
    "name": "Fangdun Cai",
    "email": "cfddream@gmail.com",
    "url": "fundon.me"
  },
  "license": "MIT",
  "keywords": [
    "auth",
    "authentication",
    "authn",
    "authorization",
    "authz",
    "http",
    "jsonwebtoken",
    "jwt",
    "middleware",
    "oauth",
    "token",
    "trek"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=7.6"
  },
  "scripts": {
    "lint": "xo",
    "test": "xo && nyc ava"
  },
  "dependencies": {
    "jsonwebtoken": "7.2.1"
  },
  "devDependencies": {
    "ava": "0.18",
    "nyc": "10",
    "request": "2",
    "request-promise": "4",
    "trek-engine": "0.5",
    "xo": "0.17"
  },
  "ava": {
    "concurrency": 5,
    "require": "babel-register"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "es6"
    ],
    "semicolon": false,
    "space": true,
    "ignores": [],
    "rules": {
      "curly": 0,
      "import/no-dynamic-require": 0,
      "import/no-named-as-default": 0,
      "max-lines": 0,
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "todo",
            "fixme"
          ],
          "location": "anywhere"
        }
      ],
      "object-curly-spacing": [
        "error",
        "always",
        {
          "arraysInObjects": true,
          "objectsInObjects": true
        }
      ],
      "space-before-function-paren": [
        2,
        "always"
      ],
      "yoda": 0
    }
  }
}
